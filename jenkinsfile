pipeline {
    agent any

    stages {
                stage('load parameters') { 
            steps {
                load "parameters.groovy"
                sh "NULL-CONDTION = $env.SAST_GIT_URL"
            }
        }
        stage('Build') {
                    when {
                    expression {
                    NULL-CONDTION != null
                    }
                    }
            steps {
                echo 'Building..'
                echo " sast value ${NULL-CONDTION}............................ "
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo " sast value ${NULL-CONDTION}............................ "

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
