pipeline {
    agent any

    stages {
                stage('load parameters') { 
            steps {
                load "parameters.groovy"
            }
        }
        stage('Build') {
                    when { expression { ${env.SAST_GIT_URL} == null } }
            steps {
                echo 'Building..'
                echo " sast value ${env.SAST_GIT_URL}............................ "
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
