                load ${workspace}\'parameters.groovy'
                echo "loading parameters"
            }
        }
        stage('Test') { 
            steps {
                // 
                echo "hello world"
            }
        }
        stage('Deploy') { 
            steps {
                // 
                echo "hello world"
            }
        }
    }
}
