pipeline {
    agent any
       environment {
       load "parameters.groovy"
    }

    stages {
        stage('Build') {
                    when {
                    expression {
                    env.SAST_GIT_URL != null
                    }
                    }
            steps {
                echo 'Building..'
                echo " sast value ${env.SAST_GIT_URL}............................ "
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo " sast value ${env.SAST_GIT_URL}............................ "

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
